@model WordViewModel

<div>
    <h1>Words form database</h1>
    <p>This record is loaded from the database.</p>
    <p>English word @Model.English is @Model.Spanish in Spanish.</p>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">English</th>
                <th scope="col">Spanish</th>
                <th scope="col">Gender</th>
                <th scope="col">Lexical Cat</th>
                <th scope="col">User</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>@Model.English</td>
                <td>@Model.Spanish</td>
                <td>@Model.GenderId</td>
                <td>@Model.LexicalId</td>
                <td>@Model.UserId</td>
            </tr>
        </tbody>
    </table>
</div>
