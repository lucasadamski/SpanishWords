@model WordViewModel



<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Word.Spanish"></label>
        <input asp-for="@Model.Word.Spanish" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Word.English"></label>
        <input asp-for="@Model.Word.English" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>